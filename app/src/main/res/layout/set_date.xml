<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/date"
        android:textColor="black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/add_date"
        app:layout_constraintStart_toStartOf="@+id/add_date" />
    <EditText
        android:id="@+id/add_date"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints=""
        android:background="@drawable/date_picker"
        android:hint="@string/dd_mm_yyyy"
        android:inputType="date"
        android:maxLength="16"
        android:maxLines="4"
        android:paddingStart="16dp"
        android:textColorHint="transparent"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/add_time_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_calendar_48"
        app:layout_constraintBottom_toBottomOf="@+id/add_date"
        app:layout_constraintEnd_toEndOf="@+id/add_date"
        app:layout_constraintTop_toTopOf="@+id/add_date"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>